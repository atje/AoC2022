    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with input file",
            "type": "go",
            "request": "launch",
            "program": "${fileDirname}",
            "args": [
                "-t", 
                "${input:testFile}"
            ]
        }   ],
   "inputs": [
    {
      "id": "testFile",
      "type": "pickString",
      "description": "Choose input file",
      "options": [
        "input.txt",
        "example.txt",
        "debug.txt"
      ],
      "default": "example.txt"
     }
  ]

}